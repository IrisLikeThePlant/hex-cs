grimoire Donut
{
    spell cook()
    {
        summon "Fry until golden brown.";
    }
}

grimoire BostonCream < Donut
{
    spell cook()
    {
        matron.cook();
        summon "Pipe full of custard and coat with chocolate.";
    }
}

BostonCream().cook();

